{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true,
      "maxLength": 100
    },
    "description": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ],
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "actions": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::action.action",
      "inversedBy": "Products"
    },
    "is_active": {
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "type": "boolean",
      "required": true,
      "default": false
    },
    "price_hrn": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "float",
      "required": true
    },
    "Product_properties": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "dynamiczone",
      "components": [
        "product-properties.size",
        "product-properties.weight",
        "product-properties.color"
      ],
      "required": true
    },
    "product_relations": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product.product",
      "mappedBy": "product_relation"
    },
    "product_relation": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "product_relations"
    },
    "site_map_product_types": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::site-map-product-type.site-map-product-type",
      "mappedBy": "products"
    },
    "user_manager": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "admin::user",
      "private": true
    }
  }
}
